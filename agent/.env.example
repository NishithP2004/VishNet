# Google Gemini
GOOGLE_API_KEY="your-google-api-key"
GEMINI_MODEL="gemini-flash-latest"

# Fastify server
PORT=3000

# Twilio (project must have Voice, a verified caller ID, and a purchased/verified number)
TWILIO_PHONE_NUMBER="+15551234567"
TWILIO_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"

# ElevenLabs (voice cloning / TTS)
ELEVENLABS_API_KEY="your-11labs-api-key"
# Optional default voice override used when no cloned voice is available
ELEVENLABS_VOICE_ID="Xb7hH8MSUJpSbSDYk0k2"

# Ngrok (public domain used by Twilio to reach your server)
NGROK_DOMAIN="your-app.ngrok-free.app"
NGROK_AUTHTOKEN="your-ngrok-authtoken"

# Redis (Docker Compose service name is 'redis')
REDIS_HOST="redis"
REDIS_PORT=6379

# MCP server URL (service discovery inside Docker network; trailing slash required)
NEO4J_MEMORY_MCP="http://neo4j-memory-mcp:8000/api/mcp/"
